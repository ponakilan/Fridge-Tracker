<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Request permission to post notifications (required for API 33+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Request permission to set exact alarms -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Request permission to run at boot to reschedule alarms -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Request permission to use the internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/refrigerator_svgrepo_com"
        android:label="@string/app_name"
        android:roundIcon="@drawable/refrigerator_svgrepo_com"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:theme="@style/Theme.FridgeApp">

        <!-- Main Activity that shows the list of items -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity for adding a new item -->
        <activity
            android:name=".AddItemActivity"
            android:label="Add New Item"
            android:parentActivityName=".MainActivity" />

        <!-- Activity for AI recipe generation -->
        <activity android:name=".RecipeGeneratorActivity"
            android:label="AI Recipe Generator"
            android:parentActivityName=".MainActivity" />

        <!-- BroadcastReceiver that handles the alarm and triggers the notification -->
        <receiver
            android:name=".ExpiryBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>
